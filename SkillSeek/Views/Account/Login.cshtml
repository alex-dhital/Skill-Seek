@model SkillSeek.Application.DTOs.Identity.LoginDto

@{
    ViewData["Title"] = "Sign In";
}

<div class="row">
    <div class="col-md-6">
        <section>
            <form id="account" method="post">
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating my-2">
                    <input asp-for="Email" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="Email" class="form-label"></label>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-floating my-2">
                    <input asp-for="Password" id="passcode" class="form-control" autocomplete="current-password" aria-required="true" />
                    <label asp-for="Password" class="form-label"></label>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form my-2">
                    <input type="checkbox" id="password" onclick="showPasswordInitial(this);" />
                        Show Password
                    <script type="text/javascript">
                    function showPasswordInitial(check_box) {
                        let sPassword = document.getElementById("passcode");
                        if (check_box.checked)
                            sPassword.setAttribute("type", "text");
                        else
                            sPassword.setAttribute("type", "password");
                    }
                    </script>
                </div>
                <div class="my-2">
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                </div>
                <div>
                    <p>
                        <a id="forgot-password" href="#">Forgot your password?</a>
                    </p>
                    <p>
                        <a asp-action="Register">Register as a new user</a>
                    </p>
                    <p>
                        <a id="resend-confirmation" href="#">Resend Email Confirmation</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
</div>