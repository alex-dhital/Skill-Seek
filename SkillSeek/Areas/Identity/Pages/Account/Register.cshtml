@page
@model RegisterModel
@{
	ViewData["Title"] = "User Registration";
}

<h1 class="mt-3">@ViewData["Title"]</h1>

<div class="row">
	<div class="col-md-7">
		<form id="registerForm" class="row" asp-route-returnUrl="@Model.ReturnUrl" method="post" enctype = "multipart/form-data" >
			<hr />
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-floating col-12 my-2">
				<input asp-for="Input.FullName" class="form-control" autocomplete="username" aria-required="true" />
				<label asp-for="Input.FullName" class="ps-4"></label>
				<span asp-validation-for="Input.FullName" class="text-danger"></span>
			</div>
			<div class="form-floating col-6 my-2">
				<input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
				<label asp-for="Input.Email" class="ps-4"></label>
				<span asp-validation-for="Input.Email" class="text-danger"></span>
			</div>
			<div class="form-floating col-6 my-2">
				<input asp-for="Input.PhoneNumber" class="form-control" aria-required="true" />
				<label asp-for="Input.PhoneNumber" class="ps-4"></label>
				<span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
			</div>
			<div class="form-floating col-6 my-2">
				<input asp-for="Input.RegionName" class="form-control" aria-required="true" />
				<label asp-for="Input.RegionName" class="ps-4"></label>
				<span asp-validation-for="Input.RegionName" class="text-danger"></span>
			</div>
			<div class="form-floating col-6 my-2">
				<input asp-for="Input.CityAddress" class="form-control" aria-required="true" />
				<label asp-for="Input.CityAddress" class="ps-4"></label>
				<span asp-validation-for="Input.CityAddress" class="text-danger"></span>
			</div>
			<div class="form-floating col-6 my-2">
				<input asp-for="Input.Password" id="initial" class="form-control" autocomplete="new-password" aria-required="true" />
				<label asp-for="Input.Password" class="ps-4"></label>
				<span asp-validation-for="Input.Password" class="text-danger"></span>
			</div>
			<div class="form col-6 my-4">
				<input type="checkbox" id="password" onclick="showpasswordinitial(this);" />
				Show Password
				<script type="text/javascript">
					function showpasswordinitial(check_box) {
						var spass = document.getElementById("initial");
						if (check_box.checked)
							spass.setAttribute("type", "text");
						else
							spass.setAttribute("type", "password");
					}
				</script>
			</div>
			<div class="form-floating col-6 my-2">
				<input asp-for="Input.ConfirmPassword" id="final" class="form-control" autocomplete="new-password" aria-required="true" />
				<label asp-for="Input.ConfirmPassword" class="ps-4"></label>
				<span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
			</div>
			<div class="form col-6 my-4">
				<input type="checkbox" id="passcode" onclick="showpasswordfinal(this);" />
				Show Password
				<script type="text/javascript">
					function showpasswordfinal(check_box) {
						var spass = document.getElementById("final");
						if (check_box.checked)
							spass.setAttribute("type", "text");
						else
							spass.setAttribute("type", "password");
					}
				</script>
			</div>
			<div class="form-floating col-6 my-2">
				<div class="form-group">
				<input asp-for="Input.ProfileImage" class="form-control" type="file" accept=".png,.jpg,.jpeg,.gif,.tif">
			</div>
			</div>
			<div class="form-floating col-12 my-2">
				<button id="registerSubmit" type="submit" class="w-100 btn btn-primary">Register</button>
			</div>
		</form>
	</div>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
